<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/samplelogo2" />

           
          <TextView 
             android:id="@+id/titletxtvw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/textvwdrwble"
            android:text="PRINTER"
             android:textColor="#000000"
             android:textAppearance="?android:attr/textAppearanceLarge" 
            android:gravity="center"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/sublay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_TestPrint"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/testprint"
                    android:textAppearance="?android:attr/textAppearanceLarge"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sublay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_LogoPrint"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/logoprint" 
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sublay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_CustomText"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/customtext"
                    android:textAppearance="?android:attr/textAppearanceLarge"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sublay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_Bitmap"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/bitmap" 
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

              <LinearLayout
                android:id="@+id/sublay41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_grayscale"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/Grayscale"
                    android:textAppearance="?android:attr/textAppearanceLarge"  />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sublay5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_BarCode"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/barcode"
                    android:textAppearance="?android:attr/textAppearanceLarge"  />
            </LinearLayout>

            
            <LinearLayout
                android:id="@+id/sublay51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_Qrcode"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/QRcode" 
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sublay15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_Lineprint"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/lineprint" 
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sublay6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_PaperFeed"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/paperfeed" 
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sublay7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_Diagnostics"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/diagnostics"
                    android:textAppearance="?android:attr/textAppearanceLarge"  />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sublay8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <Button
                    android:id="@+id/btn_unicode"
                    style="@style/textfont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_print"
                    android:text="@string/unicode" 
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>