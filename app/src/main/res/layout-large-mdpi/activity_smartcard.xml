<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/samplelogo2" />

         <TextView 
             android:id="@+id/titletxtvw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/textvwdrwble"
            android:text="SMART CARD"
            android:gravity="center"
             android:textColor="#000000"
             android:textAppearance="?android:attr/textAppearanceLarge" 
            />
    </LinearLayout>

    <LinearLayout
       
        android:id="@+id/Primarysmartcrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >
        <Button
                android:id="@+id/btn_primrysmrtcrd"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="PRIMARY SMARTCARD" 
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        <LinearLayout
        android:id="@+id/second01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/sublay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_PrimryPwrup"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="Primary Power Up" 
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sublay3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_Primrycardstatus"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="Primary Card Status"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
        
          <LinearLayout
            android:id="@+id/sublay31"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_PrimrypPwrdwn"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="Primary Power Down"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secndrysmrtcrd"
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         
        android:orientation="vertical" >
        <Button
                android:id="@+id/btn_secndrysmrtcard"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="SECONDARY SMARTCARD" 
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        <LinearLayout
        android:id="@+id/second02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/sublay12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_SecondPwrUp"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="Secondary Power Up" 
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

         <LinearLayout
            android:id="@+id/sublay13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_SecndCardStatus"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_print"
                android:text="Secondary Card Status"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
           
        </LinearLayout> 
        
        <LinearLayout
            android:id="@+id/sublay14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

             <Button
                android:id="@+id/btn_SecndPwrDwn"
                style="@style/textfont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_print"
                android:text="Secondary Power Down" 
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>
    
    </LinearLayout>

    
</LinearLayout>